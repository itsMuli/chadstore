{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "server.js"
      }
    ],
    "env": {
      "NODE_ENV": "production",
      "STRIPE_SECRET_KEY": "@stripe_secret_key",  
      "MONGODB_URI": "@mongodb_uri"               
    },
    "includeFiles": [
      "dist/**"                                    
    ]
  }
  